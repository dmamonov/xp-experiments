<?xml version="1.0" encoding="UTF-8"?>
<!--
 ! First Test of new Color Scheme for GEdit
 !
 ! $Id$
-->
<style-scheme id="xp_style" _name="XP-NEdit-Style" version="1.0">
  <author>Robert Lederm√ºller</author>
  <_description>Color scheme used in nedit</_description>

  <color name="red"                         value="#FF0000"/>
  <color name="light-blue"                  value="#3B648E"/>
  <color name="blue"                        value="#0000FF"/>
  <color name="dark-blue"                   value="#000080"/>
  <color name="dark-red"                    value="#800000"/>
  <color name="dark-green"                  value="#008000"/>
  <color name="grey"                        value="#808080"/>
  <color name="light-grey"                  value="#F0F0F0"/>
  <color name="dark-grey"                   value="#606060"/>
  <color name="yellow"                      value="#FFFF00"/>
  <color name="white"                       value="#FFFFFF"/>
  <color name="black"                       value="#000000"/>

  <style name="current-line"                background="light-grey"/>
  <style name="right-margin"                background="grey"/>
  <style name="bracket-match"               background="red" bold="true"/>
  <style name="bracket-mismatch"            background="yellow" bold="true"/>

  <!-- Search Matching -->
  <style name="search-match"                background="#F2F2F2"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="grey"/>
  <style name="php:doc-comment-tag"         foreground="dark-grey" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="light-blue" bold="true"/>

  <!-- Constants -->
  <style name="def:boolean"                 use-style="def:type"/>
  <style name="def:special-constant"        use-style="def:type"/>
  <style name="def:keyword"                 foreground="light-blue" bold="true"/>
  <style name="def:string"                  foreground="dark-blue"/>
  <style name="def:decimal"                 foreground="blue"/>
  <style name="def:floating-point"          foreground="blue"/>
  <style name="def:special-char"            foreground="blue"/>
  <style name="def:constant"                foreground="light-blue"/>
  <style name="php:class-keywords"          foreground="dark-grey" bold="true"/>
  <style name="php:class-name"              foreground="dark-blue"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="dark-red" bold="true"/>

  <!-- Others -->
  <!--style name="def:preprocessor"            foreground="black"/>
  <style name="def:note"                    foreground="white" background="#FFCCCC" bold="true" italic="false"/>
  <style name="def:error"                   foreground="red" underline="true"/>
  <style name="def:underlined"              underline="true"/-->

  <!-- Language specific styles -->
  <!--style name="xml:attribute-name"          foreground="black"/>
  <style name="xml:element-name"            foreground="black"/>
  <style name="xml:entity"                  foreground="black"/>
  <style name="xml:cdata-delim"             foreground="black"/>
  <style name="xml:processing-instruction"  foreground="black"/>
  <style name="xml:doctype"                 foreground="black"/-->

  <!--style name="js:object"                   foreground="black"/>
  <style name="js:constructors"             foreground="black"/-->

</style-scheme>
